<div class="search">
  <h1 class="search-result">
    検索結果
  </h1>
  <% if @results.length !=0 %>
    <% @results.each do |result| %>
      <br>
      <li class="searched-list">
        日付：<%= result.start_time %>
        <br>
        実施時間： <%= result.time_step.name %> 
        <br>
        実施内容：<%= result.content.name %>
        <br>
        詳細内容：<%= result.detail %>
      </li>
    <% end %>
  <% else %>
    該当する項目はありません
  <% end %>
  <br>
  <%= link_to 'トップページへ戻る', root_path, class: "back_btn_top" %>
  <%= link_to '詳細検索ページへ戻る', detail_search_time_content_index_path, class: "back_btn_detail" %><br><br>
</div>