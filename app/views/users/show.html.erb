<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "ユーザー名さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">ふりがな</th>
            <td class="table__col2"><%= @user.kana_name %></td>
          </tr>
          <tr>
            <th class="table__col1">部署</th>
            <td class="table__col2"><%= @user.department %></td>
          </tr>
          <tr>
            <th class="table__col1">Eメール</th>
            <td class="table__col2"><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>